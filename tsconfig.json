{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx", // Assuming React, adjust if needed
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Added based on recommendation

    // Bun-specific types (kept from original)
    "types": ["bun"],

    // Some stricter flags (disabled by default, kept original settings if present or added)
    "noUnusedLocals": false, // Added based on recommendation
    "noUnusedParameters": false, // Added based on recommendation
    "noPropertyAccessFromIndexSignature": false, // Added based on recommendation
    "forceConsistentCasingInFileNames": true // Kept from original
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
